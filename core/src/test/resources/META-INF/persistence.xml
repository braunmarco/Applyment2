             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="cvmanagerPU" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:/jdbc/CvManagerDS</jta-data-source>

        <class>my.cvmanager.domain.UserProfile</class>
        <class>my.cvmanager.domain.Position</class>
        <class>my.cvmanager.domain.Technology</class>
        <class>my.cvmanager.domain.User</class>
        <properties>
            <!-- <property name="hibernate.archive.autodetection" value="class"/>-->
            <!-- <property name="jakarta.persistence.jdbc.url"    value="jdbc:h2:mem:test;DB_CLOSE_DELAY=-1" />
            <property name="jakarta.persistence.jdbc.userProfile" value="sa" />
            <property name="jakarta.persistence.jdbc.password" value="" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver" />-->

            <!--<property name="hibernate.dialect" value="org.hibernate.dialect.PostgresPlusDialect"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/test"/>
            <property name="jakarta.persistence.jdbc.user" value="admin"/>
            <property name="jakarta.persistence.jdbc.password" value="admin"/>
            -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="show_sql" value="true"/>
            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>
            <property name="hibernate.enable_lazy_load_no_trans" value="true"/>
        </properties>
    </persistence-unit>
</persistence>